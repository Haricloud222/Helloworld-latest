               // deploy adapters: [tomcat8(credentialsId: 'tomcat_admin', path: '', url: 'http://172.31.30.186:8080/')], contextPath: null, war: '**/*.war'
            }
        } 
        stage('step 7') {
            steps {
                echo 'deploy project_tenv'
                //deploy adapters: [tomcat8(credentialsId: 'tomcat_admin', path: '', url: 'http://172.31.30.186:8080/')], contextPath: null, war: '**/*.war'
            }
        } 
        stage('step 8') {
            steps {
                echo 'deploy project_tenv'
               // deploy adapters: [tomcat8(credentialsId: 'tomcat_admin', path: '', url: 'http://172.31.30.186:8080/')], contextPath: null, war: '**/*.war'
            }
